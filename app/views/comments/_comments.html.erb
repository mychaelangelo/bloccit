
<!-- show list of comments -->
<p class="lead">
  <%= pluralize(comments.count, 'Comment') %>
</p>


<% comments.each do |comment| %>
  
  <!-- adding a unique id for anchor -->
  <%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>
  <% end %>
  <!-- end of anchor -->

  <div class="media">   
    <div class="media-body">

      <blockquote>
        <p><%= comment.body %></p>


        <footer>
        <%= image_tag(comment.user.avatar.tiny.url) if comment.user.avatar? %>
        submitted <%= time_ago_in_words(comment.created_at) %> ago by
        <%= comment.user.name %><br />
        </footer>

        <small>
          <% if policy(comment).destroy? %>
            <%= link_to "Delete", [@topic, @post, comment], method: :delete %>
          <% end %>
        </small>

      </blockquote>
    </div>

  </div>
<% end %>
