<!-- adding a unique id for anchor -->
<%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>


  <div class="media">   

    <div class="media-body">

      <blockquote>      
        <p><%= comment.body %></p>

        <footer>
        <%= image_tag(comment.user.avatar.tiny.url) if comment.user.avatar? %>
        submitted <%= time_ago_in_words(comment.created_at) %> ago by
        <%= comment.user.name %><br />
        </footer>

        <small>
          <% if policy(comment).destroy? %>
            <%= link_to "Delete", comment_url_helper(comment), method: :delete, remote: true %>
          <% end %>
        </small>
      </blockquote>
    </div>

  </div>
  
<% end %>


